<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        <LinearLayout
            android:id="@+id/LinearLayout_Background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:gravity="right">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                android:id="@+id/ImageView_ShowCard"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/circle_red_main" />
                <ImageView
                    android:id="@+id/ImageView_FavoriteCard"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/circle_green_favorite" />
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1.09">
                <ImageView
                    android:id="@+id/ImageView_QR"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:baselineAlignBottom="false"
                    android:layout_alignParentBottom="true" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom|right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="false">
                    <Button
                        android:id="@+id/Button_Media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:layout_gravity="center_horizontal|right"
                        android:background="@drawable/bullet_button"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp" />
                    <View
                        android:id="@+id/ViewMedia"
                        android:visibility="invisible"
                        android:background="#03A9F4"
                        android:layout_width="fill_parent"
                        android:layout_height="5sp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="5dp"></View>
                    <Button
                        android:id="@+id/Button_Bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonus"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bullet_button"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:paddingLeft="50dp" />
                    <View
                        android:id="@+id/ViewBonus"
                        android:visibility="invisible"
                        android:background="#03A9F4"
                        android:layout_width="fill_parent"
                        android:layout_height="5sp"></View>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/Button_Exit"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="top|left"
            android:clickable="true"
            android:src="@drawable/close"></ImageView>
    </FrameLayout>
</LinearLayout>