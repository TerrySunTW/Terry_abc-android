<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#323331"
        android:paddingBottom="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#323331">
                <Button
                    android:background="#323331"
                    android:textColor="#ffffff"
                    android:id="@+id/ButtonCategory"
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:scrollHorizontally="true"
                    android:maxHeight="40sp"
                    android:text="All"
                    android:lines="1"
                    android:layout_marginLeft="5dp" />
                <View
                    android:id="@+id/ViewIndication1"
                    android:visibility="invisible"
                    android:background="#03A9F4"
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"></View>
            </LinearLayout>

            <View
                android:background="#787878"
                android:layout_width="1sp"
                android:layout_height="37sp"></View>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#323331">
                <Button
                    android:background="#323331"
                    android:textColor="#ffffff"
                    android:id="@+id/ButtonGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:scrollHorizontally="true"
                    android:maxHeight="40sp"
                    android:text="Group>>"
                    android:lines="1"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"/>
                <View
                    android:id="@+id/ViewIndication2"
                    android:visibility="invisible"
                    android:background="#03A9F4"
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"></View>
            </LinearLayout>
            <View
                android:background="#787878"
                android:layout_width="1sp"
                android:layout_height="37sp"></View>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#323331">
                <Button
                    android:background="#323331"
                    android:textColor="#ffffff"
                    android:id="@+id/ButtonRepresentative"
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:scrollHorizontally="true"
                    android:maxHeight="40sp"
                    android:text="Member>>"
                    android:lines="1"
                    android:layout_marginRight="5dp" />
                <View
                    android:id="@+id/ViewIndication3"
                    android:visibility="invisible"
                    android:background="#03A9F4"
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"></View>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp">
        <View
            android:id="@+id/view_position1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0sp"></View>
        <View
            android:id="@+id/view_position2"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0sp"></View>
        <View
            android:id="@+id/view_position3"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0sp"></View>
    </LinearLayout>
    <GridView
        android:id="@+id/gridView1"
        android:numColumns="auto_fit"
        android:gravity="center_vertical|center|center_horizontal"
        android:stretchMode="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </GridView>
</LinearLayout>